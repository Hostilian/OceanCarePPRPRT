{
  "name": "oceancare-initiative",
  "version": "1.0.0",
  "description": "OceanCare Initiative - Production-ready ocean conservation platform with real-time environmental data, volunteer tracking, and impact measurement.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration.test.js",
    "test:forms": "jest tests/enhanced-forms.test.js",
    "test:apis": "jest tests/external-apis.test.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/server.js tests/*.js --max-warnings=0",
    "verify:launch": "node scripts/verify-launch.js",
    "db:setup": "node scripts/setup-postgres.js",
    "db:migrate": "node scripts/migrate-database.js"
  },
  "keywords": [
    "ocean",
    "conservation",
    "volunteer",
    "donation",
    "HCI",
    "environmental"
  ],
  "author": "OceanCare Initiative",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.10",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.6",
    "stripe": "^14.8.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  }
}
